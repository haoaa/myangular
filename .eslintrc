{
    "root": true,
    //ESLint will stop looking in parent folders once it finds a configuration with "root": true.
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "node": true,
        "jasmine": true,
        "phantomjs": true
    },
    "rules": {
        // "key-spacing" :["error", { "beforeColon": true }],
        "indent": [1 , 4,{ "SwitchCase": 0}],
        "operator-linebreak": [2, "after", {"overrides": {"?": "after", ":": "after"}}],
        "no-unused-vars": "off",
        "no-console": 0,
        "no-multi-str": 1,
        "no-useless-escape": [0],
        "no-trailing-spaces": 1,
        "no-constant-condition": ["error", { "checkLoops": false }],
        "semi":2,
        "comma-style": ["error", "last"],
        "comma-spacing" : "error",
        "comma-dangle": 2,

        //space style reference to  https://eslint.org/docs/rules/#stylistic-issues
        "spaced-comment" : ["error", "always", { "exceptions": ["-", "+"] }],
        "switch-colon-spacing": ["error", {"after": true, "before": false}],
        "space-unary-ops": [2, {"words": true, "nonwords": false}],
        "space-infix-ops": ["error", {"int32Hint": true}],
        "space-in-parens": ["error", "never"],
        "space-before-function-paren": ["error", {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "always"
        }],
        "space-before-blocks": ["error", { "functions": "always", "keywords": "always", "classes": "never" }],
        "no-irregular-whitespace": 0,

        //Possible Errors
        "no-func-assign": "off"

    },
    "globals": {

    }
}
